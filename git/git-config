#!/usr/bin/env bash
# -*- coding: utf-8 -*-

$(git --version)
if [ $? -ne 0 ]
then
	echo "Git has not been installed!"
	exit 1;
fi

cat > ~/.gitconfig <<EOF

[user]
    name = wangzhizhou
    email = 824219521@qq.com

[diff]
    submodule = log

[alias]
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    b = branch
    pl = pull
    pu = push
    po = push origin
    co = checkout
    cl = clone
    clrs = clone --recurse-submodules
    s = status
    c = commit
    a = add
    r = remote
    rv = remote -v
    m = merge
    d = diff
    dsm = diff --submodule
    cdf = clean -dxf
    st = stash
    sl = stash list
    sp = stash pop
    sm = submodule
    smi = submodule init
    smu = submodule update
    smur = submodule update --remote
    rst = reset
    rvt = revert

[color]
    ui = auto

EOF