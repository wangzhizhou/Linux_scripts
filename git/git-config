#!/usr/bin/env bash
# -*- coding: utf-8 -*-

show_options() 
{
    PS3="ðŸ˜„ Choose an option number show above: "
    opts=("personal" "work" "custom")
    select opt in "${opts[@]}"
    do
        case $opt in
            "personal")
                git_user_name="wangzhizhou"
                git_user_email="824219521@qq.com"
                break
                ;;
            "work")
                git_user_name="wangzhizhou"
                git_user_email="wangzhizhou@bytedance.com"
                break
                ;;
                "custom")
                read -p "â“ Please input your git user name: "  git_user_name
                read -p "â“ Please input your git user email: " git_user_email
                break
                ;;
            *)
                echo "ðŸ’¥ You choose invalid, use default config!!!"
                break
                ;;
        esac
    done
}

show_git_config()
{
    is_local_git=$1

    if [[ $is_local_git -eq 0 ]]; then
        git_user_name=$(git config --get user.name)
        git_user_email=$(git config --get user.email)
        echo "ðŸ§‘ Current global git user name  ðŸ‘‰ $git_user_name" 
        echo "ðŸ“ª Current global git user email ðŸ‘‰ $git_user_email"
    else 
        git_user_name=$(git config --local --get user.name)
        git_user_email=$(git config --local --get user.email)
        echo "ðŸ§‘ Current local git user name  ðŸ‘‰ $git_user_name" 
        echo "ðŸ“ª Current local git user email ðŸ‘‰ $git_user_email"
    fi

}

config_git() 
{
git_user_name="$1"
git_user_email="$2"
is_local_git=$3

if [[ $is_local_git -eq 0 ]]; then
cat > ~/.gitconfig <<EOF
[user]
    name = $git_user_name
    email = $git_user_email

[diff]
    submodule = log

[pager]
    branch = false

[pull]
    rebase = false

[alias]

    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold yellow) by %an' --abbrev-commit --date=relative --decorate
    la = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold yellow) by %an' --abbrev-commit --date=relative --decorate --all
    lm = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --decorate --author=$git_user_name
    lma = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative --decorate --all --author=$git_user_name
    
    # æŸ¥çœ‹æœ¬åœ°åˆ†æ”¯åˆ—è¡¨, å‰é¢æœ‰*å·çš„åˆ†æ”¯æ˜¯å½“å‰åˆ†æ”¯
    b = branch
    # æŸ¥çœ‹è¿œç¨‹åˆ†æ”¯åˆ—è¡¨
    br = branch -r
    # æŸ¥çœ‹æœ¬åœ°åˆ†æ”¯è¯¦æƒ…ä¿¡æ¯ï¼ŒåŒ…æ‹¬åˆ†æ”¯å½“å‰æœ€è¿‘ä¸€æ¬¡æäº¤ï¼ŒåŠå¯¹åº”çš„è¿œç¨‹ä»“åº“åˆ†æ”¯åç§°
    bv = branch -vv
    # åˆ é™¤åˆ†æ”¯
    bd = branch -d
    # å¼ºåˆ¶åˆ é™¤åˆ†æ”¯
    bD = branch -D
    # ç»‘å®šå½“å‰æœ¬åœ°åˆ†æ”¯å¯¹åº”çš„è¿œç¨‹ä»“åº“åˆ†æ”¯
    bu = branch -u
    # æ‹‰å–ç»‘å®šçš„è¿œç¨‹ä»“åº“åˆ†æ”¯ä¸Šçš„æœ€æ–°æäº¤åˆ°æœ¬åœ°å¯¹åº”åˆ†æ”¯ä¸Š
    pl = pull
    # æ‹‰å–æ‰€æœ‰å­æ¨¡å—ç»‘å®šçš„è¿œç¨‹ä»“åº“åˆ†æ”¯ä¸Šçš„æœ€æ–°æäº¤åˆ°æœ¬åœ°å¯¹åº”åˆ†æ”¯ä¸Š
    plrs = pull --recurse-submodules --ff-only
    # æäº¤æœ¬åœ°åˆ†æ”¯ä¸Šçš„å†…å®¹åˆ°è¿œç¨‹ä»“åº“å¯¹åº”çš„åˆ†æ”¯ä¸Š
    pu = push
    # å¦‚æžœæœ¬åœ°åˆ†æ”¯å’Œè¿œç¨‹ä»“åº“åŒåï¼Œåˆ™ä¸ç”¨æŒ‡å®šè¿œç¨‹ä»“åº“å¯¹åº”åˆ†æ”¯å³å¯ç›´æŽ¥æäº¤
    po = push origin
    pof = push origin -f
    # ä¸¢å¼ƒæ”¹åŠ¨
    dp = restore 
    # å¿½ç•¥æŒ‡å®šæ–‡ä»¶æ”¹åŠ¨è·Ÿè¸ª
    ic = update-index --assume-unchanged
    # æ¢å¤æŒ‡å®šæ–‡ä»¶æ”¹åŠ¨è·Ÿè¸ª
    uic = update-index --no-assume-unchanged

    a = add
    c = commit
    co = checkout
    cb = checkout -b
    cl = clone
    cdf = clean -dxf
    clrs = clone --recurse-submodules
    pk = cherry-pick
    pkc = cherry-pick --continue
    pka = cherry-pick --abort

    d = diff
    dsm = diff --submodule

    m = merge
    
    s = status
    ss = status -s
    st = stash
    sl = stash list
    sp = stash pop
    
    sh = !git --no-pager show HEAD

    t = tag
    tl = tag -l
    td = tag -d

    sm = submodule
    smi = submodule init
    smu = submodule update
    smur = submodule update --remote
    smuir = submodule update --init --recursive

    r = remote
    rv = remote -v
    rpo = remote prune origin

    rst = reset
    rsth = reset --hard HEAD
    rvt = revert
    
    # rebase 
    rb = rebase
    rbc = rebase --continue
    rba = rebase --abort
    rbi = rebase -i 

    h = config --global --list
[color]
    ui = auto

EOF
else
git config --local user.name $git_user_name
git config --local user.email $git_user_email
fi

echo "âœ…âœ…âœ… Configure Git Done âœ…âœ…âœ…"
show_git_config $is_local_git
echo "ðŸŽ‰ðŸŽ‰ðŸŽ‰ Congratulations! And you can use Git more conveniently!"
}

$(git --version)
if [ $? -ne 0 ]
then
	echo "ðŸ’¥ Git has not been installed! You should install Git first!"
	exit 1;
fi

read -p "â—ï¸ Config Local Git? (Y|y|N|n)" is_local_git
case "$is_local_git" in
    Y|y)
        echo "ðŸ’¡ You choose config local git"
        config_local_git=1
    ;;
    N|n)
        echo "ðŸ’¡ You choose config global git"
        config_local_git=0
    ;;
    *)
        echo "ðŸ’¥ Invalid Answer, and Terminated!"
        exit -1
    ;;
esac

show_git_config $config_local_git

read -p "â“ Do you want use current git user and email? (y/n|Y/N|yes/no|YES/NO) "  answer
case "$answer" in
    "Y"|"y"|"yes"|"YES")
    ;;
    "N"|"n"|"no"|"NO")
        echo
        echo "â—ï¸ You can choose a pre-defined username and email or you can custom them"
        show_options
    ;;
    *)
        echo "ðŸ’¥ Invalid Answer, and Terminated!"
        exit -1
    ;;
esac

echo "âœ… You choose configure your git user name as  ðŸ‘‰ $git_user_name"
echo "âœ… You choose configure your git user email as ðŸ‘‰ $git_user_email"

read -p "â—ï¸ Please check your git username and email correctly. And Continue: (Y|y|N|n)" next
case "$next" in
    Y|y)
        echo "ðŸƒðŸƒðŸƒ Your choose configure Git right now! Please wait a few seconds ..."
    ;;
    N|n)
        echo "âŒ You choose configure git later, and terminated!"
        exit 0
    ;;
    *)
        echo "ðŸ’¥ Invalid Answer, and Terminated!"
        exit -1
    ;;
esac

config_git $git_user_name $git_user_email $config_local_git
